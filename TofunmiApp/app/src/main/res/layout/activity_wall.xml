<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tile_bg"
    tools:context="com.example.simpumind.tofunmiapp.com.example.simpumind.home.WallActivity">

    <EditText
        android:id="@+id/inputSearchEditText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ellipsize="start"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:background="@drawable/edit_text_style"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button"
        style="@style/DefaultButtonText"
        android:background="@drawable/button_default_bg"
        android:layout_below="@+id/inputSearchEditText"
        android:layout_alignRight="@+id/inputSearchEditText"
        android:layout_alignEnd="@+id/inputSearchEditText" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="15dp"
        android:dividerHeight="10dp"
        android:listSelector="@drawable/list_row_selector"
        android:id="@+id/list_post">

    </ListView>

</RelativeLayout>
