<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_suggestion"
    tools:context="org.simpumind.com.bakerymanager.org.simpumind.bakery.staff.SuggestionActivity">

    <EditText
        android:id="@+id/etTweetReview"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:padding="10dp"
        android:hint="Suggest up to 280 characters"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"
        android:lines="4"
        android:maxLength="280"
        android:paddingBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:singleLine="false" />

    <Button
        android:id="@+id/theReviewBarButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:text="Submit"
        android:background="@color/primary_dark"
        android:textColor="#fff"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/suggestList"
        android:layout_width="match_parent"
        android:divider="@color/primary_dark"
        android:dividerHeight="1dp"
        android:background="@drawable/rounded_edittext"
        android:layout_height="wrap_content"/>

</LinearLayout>
