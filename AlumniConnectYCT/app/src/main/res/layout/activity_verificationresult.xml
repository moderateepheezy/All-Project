<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/regist_title_bakcground" >
    <include 
        layout="@layout/view_navigation">
        
    </include>
    <TextView 
        android:id="@+id/verificationresult_no_layout"
        android:textColor="@color/bussiness_card_text"
		android:textSize="@dimen/ucenter_item_text"
		android:text="暂未查询到相关人员信息"
		android:visibility="gone"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/ucenter_item_height"
		android:gravity="center"/>
	<LinearLayout 
	    android:id="@+id/verificationresult_layout"
		android:visibility="gone"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/ucenter_item_height"
		android:gravity="left|center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_marginLeft="@dimen/ucenter_item_arror_margin_right"
		    android:text="姓名"
		    android:textColor="@color/bussiness_card_text"
			android:textSize="@dimen/ucenter_item_text"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"/>
	    <TextView 
		    android:id="@+id/verificationresult_name"
    		android:textColor="@color/tab_text_press"
			android:textSize="@dimen/ucenter_item_text"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"/>
	    <TextView 
		    android:text="有多位校友，请选择"
		    android:textColor="@color/bussiness_card_text"
			android:textSize="@dimen/ucenter_item_text"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/verificationresult_list"
	    android:background="@android:color/white"
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent">
    </LinearLayout>
</LinearLayout>
