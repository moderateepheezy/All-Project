<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regist_title_bakcground"
    android:orientation="vertical" >
    <include 
        layout="@layout/view_navigation"/>
	<TextView 
    	android:text="举报原因"
        android:textSize="@dimen/regist_title_text"
        android:textStyle="bold"
        android:textColor="@color/regist_title_text"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/regist_title_margin_left"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/regist_title_height"/>
	<RelativeLayout 
	    android:id="@+id/report_falseinformation"
	    android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bussiness_item_height" >
        <TextView 
            android:text="信息不实"
    		android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:layout_centerVertical="true"
            android:textSize="@dimen/bussiness_item_text"
            android:textColor="@color/bussiness_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox 
	    	android:id="@+id/report_falseinformation_image"
            style="@style/report_checkbox_style"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bussiness_item_margin_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>		
    <View 
   		android:layout_width="@dimen/bussiness_item_margin_left"
   		android:layout_height="0.5dip"
    	android:background="@android:color/white"/>
	<RelativeLayout 
	    android:id="@+id/report_advertising_fraud"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bussiness_item_height"
        android:background="@android:color/white" >
        <TextView 
    		android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:text="广告诈骗"
            android:layout_centerVertical="true"
            android:textSize="@dimen/bussiness_item_text"
            android:textColor="@color/bussiness_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox 
	    	android:id="@+id/report_advertising_fraud_image"
            style="@style/report_checkbox_style"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bussiness_item_margin_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>				    
	<View 
   		android:layout_width="@dimen/bussiness_item_margin_left"
   		android:layout_height="0.5dip"
    	android:background="@android:color/white"/>
	<RelativeLayout 
	    android:id="@+id/report_message_harassment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bussiness_item_height"
        android:background="@android:color/white" >
        <TextView 
            android:text="短消息骚扰"
    		android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:layout_centerVertical="true"
            android:textSize="@dimen/bussiness_item_text"
            android:textColor="@color/bussiness_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox 
            android:id="@+id/report_message_harassment_image"
            style="@style/report_checkbox_style"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bussiness_item_margin_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>				    
	<View 
   		android:layout_width="@dimen/bussiness_item_margin_left"
   		android:layout_height="0.5dip"
    	android:background="@android:color/white"/>
	<RelativeLayout 
	    android:id="@+id/report_sensitive_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bussiness_item_height"
        android:background="@android:color/white" >
        <TextView 
            android:text="敏感信息"
    		android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:layout_centerVertical="true"
            android:textSize="@dimen/bussiness_item_text"
            android:textColor="@color/bussiness_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox 
            android:id="@+id/report_sensitive_information_image"
            style="@style/report_checkbox_style"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bussiness_item_margin_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>				    
	<View 
    	android:layout_marginLeft="@dimen/bussiness_item_margin_left"
    	android:layout_width="match_parent"
    	android:layout_height="0.5dip"
	    android:background="@color/bussiness_card_line"/>
	<RelativeLayout 
	    android:id="@+id/report_other"
	    android:layout_marginTop="@dimen/bussiness_item_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bussiness_item_height"
        android:background="@android:color/white" >
        <TextView 
            android:text="其他"
    		android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:layout_centerVertical="true"
            android:textSize="@dimen/bussiness_item_text"
            android:textColor="@color/bussiness_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:src="@drawable/ic_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bussiness_item_margin_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>	
</LinearLayout>
