<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_title_height"
    android:orientation="vertical"
    android:id="@+id/nav_layout"
    android:background="@color/tab_text_press" >
    <TextView 
        android:id="@+id/nav_title"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/nav_title_text"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:textColor="@android:color/white"/>
	<ImageView 
	    android:id="@+id/nav_left_item"
	    android:src="@drawable/ic_back"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="@dimen/nav_baritem_margin_left"
	    android:visibility="gone"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/nav_left_item_text"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="@dimen/nav_baritem_margin_left"
	    android:textSize="@dimen/nav_baritem_text"
	    android:textColor="@android:color/white"
	    android:text="取消"
	    android:visibility="gone"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<ImageView 
	    android:id="@+id/nav_right_item"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:visibility="gone"
	    android:layout_marginRight="@dimen/nav_baritem_margin_right"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/nav_right_item_text"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="@dimen/nav_baritem_margin_left"
	    android:textSize="@dimen/nav_baritem_text"
	    android:textColor="@android:color/white"
	    android:text="提交"
	    android:visibility="gone"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>	
	<ImageView 
	    android:id="@+id/nav_right_item_1"
	    android:visibility="gone"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:paddingRight="@dimen/nav_baritem_margin_left"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<ImageView 
	    android:id="@+id/nav_right_item_2"
	    android:visibility="gone"
	    android:layout_toLeftOf="@id/nav_right_item_1"
	    android:layout_centerVertical="true"
	    android:paddingRight="@dimen/nav_baritem_margin_right"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
</RelativeLayout>
