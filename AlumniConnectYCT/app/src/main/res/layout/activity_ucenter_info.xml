<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >   
    <include 
        layout="@layout/view_navigation"/>
    <TextView 
        android:id="@+id/ucenter_info_no_layout"
        android:visibility="gone"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:text="暂无获取到相关用户信息"
	    android:textSize="@dimen/login_edit_commit_text"
	    android:textColor="@color/tab_text_press"
    	android:gravity="center" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fadeScrollbars="true">
        <LinearLayout 
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical">
            <LinearLayout 
	            android:id="@+id/ucenter_info_layout"
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
		        <TextView 
		            android:text="头像"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
		            android:layout_weight="1"
		            android:textColor="@android:color/black"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
		            android:textSize="@dimen/ucenter_item_text"/>
		        <RelativeLayout 
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content">
		            <ImageView 
			            android:id="@+id/ucenter_info_image"		            
		    			android:layout_width="@dimen/ucenter_item_image_height"
		    			android:layout_height="@dimen/ucenter_item_image_height"
		    			android:scaleType="centerCrop"
			            android:src="@drawable/ic_user_press"/>
			        <ImageView 
		    			android:layout_width="@dimen/ucenter_item_image_height"
		    			android:layout_height="@dimen/ucenter_item_image_height"
			            android:src="@drawable/bg_usericon"/>
		        </RelativeLayout>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:visibility="invisible"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    <View 
                android:background="@color/regist_title_line"
                android:layout_height="0.5dip"
                android:layout_width="match_parent"/>
		    <LinearLayout 
                android:id="@+id/ucenter_info_password"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/regist_content_margin_left"
                android:layout_marginRight="@dimen/regist_content_margin_right"
                android:layout_height="@dimen/regist_content_height"
                android:gravity="center_vertical"
	   			android:layout_width="fill_parent">
                <TextView 
                    android:text="修改密码"
                    android:layout_weight="3"
        			android:textSize="@dimen/activity_send_left_text"
                    android:textColor="@android:color/black"
	   				android:layout_width="fill_parent"
	   				android:layout_height="wrap_content"/>
                <ImageView 
                    android:src="@drawable/ic_next"
	   				android:layout_width="wrap_content"
	   				android:layout_height="wrap_content"/>
            </LinearLayout>
	        <LinearLayout 
	            android:orientation="vertical"
		   		android:layout_width="fill_parent"
		   		android:layout_height="wrap_content">
                <View 
	                android:background="@color/regist_title_bakcground"
		   			android:layout_width="fill_parent"
		   			android:layout_height="@dimen/regist_title_height"/>
                <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="姓名"
	                    android:layout_weight="1"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <TextView 
	                    android:id="@+id/ucenter_info_name"
	                    android:layout_weight="1"
	        			android:textSize="@dimen/activity_send_left_text"
	        			android:textColor="@color/activity_send_line"
	        			android:gravity="right"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="学级"
	                    android:layout_weight="1"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <TextView 
	                    android:id="@+id/ucenter_info_year"
	                    android:layout_weight="1"
	        			android:textSize="@dimen/activity_send_left_text"
	        			android:textColor="@color/activity_send_line"
	        			android:gravity="right"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="所在院系"
	                    android:layout_weight="1"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <TextView 
	                    android:id="@+id/ucenter_info_collage"
	                    android:layout_weight="1"
	        			android:textSize="@dimen/activity_send_left_text"
	        			android:textColor="@color/activity_send_line"
	        			android:gravity="right"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	            </LinearLayout>
	            
	            <View 
	                android:background="@color/regist_title_bakcground"
		   			android:layout_width="fill_parent"
		   			android:layout_height="@dimen/regist_title_height"/>
	            
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="邮箱："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText  
	                    android:id="@+id/ucenter_info_email_"
	                    android:hint="输入邮箱"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/ucenter_info_switch_email"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="手机："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/ucenter_info_phone"
	                    android:hint="输入您的手机号："
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:inputType="number"
	                    android:maxLength="11"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/ucenter_info_switch_phone"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="QQ："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/ucenter_info_qq"
	                    android:hint="输入QQ号码"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:inputType="number"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/ucenter_info_switch_qq"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_bakcground"
		   			android:layout_width="fill_parent"
		   			android:layout_height="@dimen/regist_title_height"/>
	            
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="城市："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <TextView 
	                    android:id="@+id/ucenter_info_city"
	                    android:hint="输入您所在的城市"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/ucenter_info_switch_city"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="公司："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/ucenter_info_compname"
	                    android:hint="输入任职单位名称"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/ucenter_info_switch_compname"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="行业："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/ucenter_info_industry"
	                    android:hint="您所在的行业"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/ucenter_info_switch_industry"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_bakcground"
		   			android:layout_width="fill_parent"
		   			android:layout_height="@dimen/regist_title_height"/>
                <LinearLayout 
                    android:id="@+id/ucenter_info_label_layout"
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="个人标签"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
	                <TextView 
	                    android:id="@+id/ucenter_info_label"
	        			android:textSize="@dimen/activity_send_left_text"
	        			android:textColor="@color/activity_send_line"
	        			android:gravity="right"
	        			android:singleLine="true"
	                    android:layout_weight="1"
	                	android:layout_marginLeft="@dimen/regist_content_margin_left"
		   				android:layout_width="match_parent"
		   				android:layout_height="wrap_content"/>
	            </LinearLayout>
	        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
