<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/regist_title_bakcground" >
    <include 
        layout="@layout/view_navigation">
        
    </include>
    <ScrollView         
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout 
		    android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
		    <LinearLayout 
	            android:id="@+id/ucenter_myinfo"
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
	    		<RelativeLayout 
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right">
	    		    <ImageView 
			            android:id="@+id/ucenter_image"
			            android:scaleType="centerCrop"
		    			android:layout_width="@dimen/ucenter_item_image_height"
		    			android:layout_height="@dimen/ucenter_item_image_height"
			            android:src="@drawable/ic_user_press"/>
			        <ImageView 
		    			android:layout_width="@dimen/ucenter_item_image_height"
		    			android:layout_height="@dimen/ucenter_item_image_height"
			            android:src="@drawable/bg_usericon"/>
	    		</RelativeLayout>
		        
		        <LinearLayout 
		            android:orientation="horizontal"
		            android:layout_weight="1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content">
		            <TextView 
			            android:text="我的资料"
			            android:textColor="@android:color/black"
			            android:layout_weight="1"
		    			android:layout_width="fill_parent"
		    			android:layout_height="wrap_content"
			            android:textSize="@dimen/ucenter_item_text"/>
			        <TextView 
			            android:id="@+id/ucenter_name"
			            android:textSize="@dimen/ucenter_item_name_text"
		            	android:layout_marginRight="@dimen/ucenter_item_name_margin_right"
			            android:textColor="@android:color/black"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"/>
		        </LinearLayout>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    
		    <LinearLayout 
	            android:id="@+id/ucenter_mymessage"
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_marginTop="@dimen/ucenter_item_sper"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
		        <ImageView 
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:src="@drawable/ic_mymessage"/>
		        <LinearLayout 
		            android:orientation="horizontal"
		            android:layout_weight="1"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content">	            
			        <TextView 
			            android:text="我的消息"
			            android:textColor="@android:color/black"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
			            android:textSize="@dimen/ucenter_item_text"/>
			        <ImageView 
			            android:id="@+id/ucenter_newmessage"
			            android:visibility="gone"
			            android:layout_marginLeft="5dip"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
						android:src="@drawable/new_notify"/>
		        </LinearLayout>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="@color/regist_title_bakcground"/>
		    <LinearLayout
	            android:id="@+id/ucenter_myactivity" 
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
		        <ImageView 
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:src="@drawable/ic_myactivity"/>
		        <TextView 
		            android:text="我的活动"
		            android:layout_weight="1"
		            android:textColor="@android:color/black"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
		            android:textSize="@dimen/ucenter_item_text"/>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="@color/regist_title_bakcground"/>
		    <LinearLayout 	        
	            android:id="@+id/ucenter_mybussinesscards"
	            android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
		        <ImageView 
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:src="@drawable/ic_mybussinesscard"/>
		        <TextView 
		            android:text="我的名片夹"
		            android:layout_weight="1"
		            android:textColor="@android:color/black"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
		            android:textSize="@dimen/ucenter_item_text"/>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="@color/regist_title_bakcground"/>
		    <LinearLayout 	        
	            android:id="@+id/ucenter_verification"
	            android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
		        <ImageView 
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:src="@drawable/ic_verification"/>
		        <TextView 
		            android:text="验证"
		            android:layout_weight="1"
		            android:textColor="@android:color/black"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
		            android:textSize="@dimen/ucenter_item_text"/>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    <LinearLayout 	        
	            android:id="@+id/ucenter_setting"
		        android:layout_marginTop="@dimen/ucenter_item_sper"
	            android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@android:color/white"
		        android:layout_height="@dimen/ucenter_item_height"
	    		android:layout_width="match_parent">
		        <ImageView 
		            android:layout_marginLeft="@dimen/ucenter_item_image_margin_left"
		            android:layout_marginRight="@dimen/ucenter_item_image_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:src="@drawable/ic_setting"/>
		        <TextView 
		            android:text="更多"
		            android:layout_weight="1"
		            android:textColor="@android:color/black"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content"
		            android:textSize="@dimen/ucenter_item_text"/>
		        <ImageView 
		            android:src="@drawable/ic_next"
		            android:layout_marginRight="@dimen/ucenter_item_arror_margin_right"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    <TextView 
		        android:id="@+id/ucenter_loginout"
				android:layout_gravity="center_horizontal"
        		android:layout_marginLeft="@dimen/login_edit_margin_leftright"
        		android:layout_marginRight="@dimen/login_edit_margin_leftright"
		        android:layout_marginTop="@dimen/ucenter_item_sper"
		        android:layout_marginBottom="@dimen/ucenter_item_sper"
		        android:text="注销"
		        android:gravity="center"
		        android:textSize="@dimen/login_edit_commit_text"
		        android:textColor="@android:color/white"
		        android:background="@drawable/bg_btn_darkred"
		   		android:layout_width="match_parent"
		   		android:layout_height="@dimen/activity_send_text2_height"
		        android:textStyle="bold" />
		</LinearLayout>
    </ScrollView>
</LinearLayout>
