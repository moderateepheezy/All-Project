<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tab_bg" >
    <include 
        layout="@layout/view_navigation"/>
    <RelativeLayout 
        android:layout_marginTop="@dimen/regist_title_height"
        android:background="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/activity_donation_userinfo_height">
        <ImageView 
            android:id="@+id/donation_pay_product_image"
            android:src="@mipmap/ic_danation_must"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/donation_pay_product"
            android:layout_toRightOf="@id/donation_pay_product_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
            android:hint="选择项目"
			android:textSize="@dimen/activity_send_left_text"
            android:background="@null"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
			android:textColor="@color/activity_send_hint"/>
        <ImageView 
            android:id="@+id/donation_pay_arror_image"
            android:src="@mipmap/ic_arror"
            android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/donation_pay_name"
            android:textColor="@color/verification"
            android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
            android:layout_toLeftOf="@id/donation_pay_arror_image"
            android:layout_centerVertical="true"
            android:text="校友基金"
            android:textSize="@dimen/activity_donation_pay_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
    </RelativeLayout>
	<View 
	    android:layout_height="@dimen/activity_donation_userinfo_spe_height"
	    android:layout_width="match_parent"/>
	<LinearLayout 
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/activity_donation_userinfo_height">
	    <EditText 
	        android:id="@+id/donation_money"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
	        android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
	        android:hint="捐赠金额（输入数字）"
			android:textSize="@dimen/activity_send_left_text"
	        android:background="@null"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:singleLine="true"
	      	android:ellipsize="end"
	      	android:inputType="number"
			android:textColorHint="@color/activity_send_hint"
			android:textColor="@color/activity_send_hint"/>
	</LinearLayout>
	<TextView 
    	android:layout_width="match_parent"
	    android:layout_height="@dimen/activity_donation_payway_desp_height"
	    android:text="支付途径"
	    android:paddingLeft="@dimen/activity_donation_userinfo_marginleft3"
	    android:gravity="center_vertical"/>
	<LinearLayout 
	    android:id="@+id/donation_pay_alipay"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/activity_donation_userinfo_height">
	    <ImageView 
	        android:id="@+id/donation_pay_alipay_image"
	        android:src="@mipmap/ic_pay_normal"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	    <ImageView 
	        android:src="@mipmap/ic_alipay"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	    <TextView 
	        android:text="支付宝支付"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	</LinearLayout>
	<View 
        android:layout_height="1dip"
        android:layout_width="match_parent"/>
	<LinearLayout 
	    android:id="@+id/donation_pay_weixinpay"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/activity_donation_userinfo_height">
	    <ImageView 
	        android:id="@+id/donation_pay_weixinpay_image"
	        android:src="@mipmap/ic_pay_normal"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	    <ImageView 
	        android:src="@mipmap/ic_weixinpay"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	    <TextView 
	        android:text="微信支付"
	        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	</LinearLayout>
	<TextView 
    	android:id="@+id/donation_pay_start"
        android:text="下一步"
        android:gravity="center"
        android:textSize="@dimen/login_edit_commit_text"
        android:textColor="@android:color/white"
   		android:layout_width="match_parent"
   		android:layout_height="@dimen/activity_send_text2_height"
        android:background="@color/tab_text_press"
        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
        android:layout_marginRight="@dimen/login_edit_margin_leftright"
        android:layout_marginTop="@dimen/activity_donation_tip_margin_bottom"
        android:textStyle="bold" />
</LinearLayout>
