<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/organization_detail_item_height" >
	    <RelativeLayout 
	        android:id="@+id/adapter_organization_detail_image_layout"
		    android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	        <ImageView 
		        android:id="@+id/adapter_organization_detail_image"
		        android:scaleType="centerCrop"
		        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/ic_organization_user_default"/>
	        <ImageView 
		        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/bg_usericon"/>
		    <ImageView 
		        android:id="@+id/adapter_organization_detail_image_verify"
		        android:visibility="gone"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_left"
		        android:layout_centerVertical="true"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/ic_user_verification_no"/>
	    </RelativeLayout>
	    <LinearLayout 
	        android:id="@+id/adapter_organization_detail_clicklayout"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent"
		    android:layout_marginRight="@dimen/organization_item_image_margin_right"
		    android:layout_marginLeft="@dimen/organization_item_image_margin_right"
		    android:layout_toRightOf="@id/adapter_organization_detail_image_layout">
	        <RelativeLayout 
	            android:orientation="horizontal"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content">
	            <TextView 
				    android:textColor="@android:color/black"
				    android:textSize="@dimen/organization_item_title_text"
				    android:singleLine="true"
				    android:layout_centerVertical="true"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
				    android:id="@+id/adapter_organization_detail_name"/>
	            <TextView 
	                android:id="@+id/adapter_organization_detail_isadmin"
	                android:layout_toRightOf="@id/adapter_organization_detail_name"
	                android:text="管理员"
				    android:layout_centerVertical="true"
	                android:paddingLeft="@dimen/organization_detail_item_admin_padding_leftright"
	                android:paddingRight="@dimen/organization_detail_item_admin_padding_leftright"
	                android:paddingTop="@dimen/organization_detail_item_admin_padding_topbottom"
	                android:paddingBottom="@dimen/organization_detail_item_admin_padding_topbottom"
	                android:textColor="@android:color/white"
	                android:background="@drawable/rounded_text"
	                android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
	                android:textSize="@dimen/organization_detail_item_admin_text"/>
	            <LinearLayout 
			        android:id="@+id/adapter_organization_detail_layout"
			        android:layout_alignParentRight="true"
			        android:orientation="horizontal"	        
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" >
			    	<TextView 
			    	    android:id="@+id/adapter_organization_detail_apply_state"
			    	    android:layout_marginRight="@dimen/organization_item_news_margin_right"
				        android:textSize="@dimen/organization_item_title_text"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:gravity="center"
				    	android:text="待审"
				    	android:textColor="@color/organization_detail_text"/>
			    	<LinearLayout 
			    	    android:id="@+id/adapter_organization_detail_control"  
			    	    android:visibility="gone"
			    	    android:orientation="horizontal"  
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content">
			    	    <ImageView 
			    	        android:id="@+id/adapter_organization_detail_manager"
			    	        android:src="@drawable/ic_organization_manage"
			    	        android:paddingRight="@dimen/organization_detail_item_setting_margin"
			    			android:layout_width="wrap_content"
			    			android:layout_height="wrap_content"/>
			    	    <ImageView 
			    	        android:id="@+id/adapter_organization_detail_talk"
			    	        android:src="@drawable/ic_organization_talk"
			    	        android:paddingRight="@dimen/organization_detail_item_message_margin"
			    			android:layout_width="wrap_content"
			    			android:layout_height="wrap_content"/>
			    	</LinearLayout>	        
			    </LinearLayout>
	        </RelativeLayout>
	        <TextView 
			    android:textColor="@color/version"
			    android:textSize="@dimen/organization_item_otherinfo_text"
			    android:singleLine="true"
			    android:visibility="gone"
	    		android:paddingBottom="@dimen/organization_detail_item_margin_bottom"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_organization_detail_classinfo"/>
	        <TextView 
			    android:textColor="@color/version"
			    android:textSize="@dimen/organization_item_otherinfo_text"
			    android:singleLine="true"
	    	    android:visibility="gone"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_organization_detail_industry"/>
	    </LinearLayout>
	</RelativeLayout>
	<View 
    	android:layout_width="match_parent"
    	android:layout_height="0.5dip"
	    android:background="@color/regist_title_bakcground"/>
</LinearLayout>
