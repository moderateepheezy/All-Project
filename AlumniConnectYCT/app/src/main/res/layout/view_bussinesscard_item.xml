<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dip"
        android:layout_height="@dimen/bussiness_new_message"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/bussinesscard_item_classimage"
    		android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:src="@drawable/ic_organization_class"
            android:layout_marginRight="@dimen/bussiness_item_margin_right"
            android:layout_width="@dimen/bussiness_item_image_widthheight"
            android:layout_height="@dimen/bussiness_item_image_widthheight"/>
        <TextView 
            android:id="@+id/bussinesscard_item_classname"
            android:layout_marginRight="@dimen/bussiness_item_margin_right"
            android:singleLine="true"
            android:layout_weight="1"
            android:textSize="@dimen/bussiness_item_text"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:src="@drawable/ic_next"
            android:layout_marginRight="5dip"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
