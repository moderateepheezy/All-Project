<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <include 
        layout="@layout/view_navigation"/>
	<ScrollView 
	    android:id="@+id/choice_image_scrollview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none"
	    android:fadeScrollbars="true">
	    <LinearLayout 
       	    android:orientation="vertical"
       	    android:id="@+id/choice_image_layout"
       	    android:layout_marginLeft="@dimen/activity_detail_pic_layout_margin_leftright"
       	    android:layout_marginRight="@dimen/activity_detail_pic_layout_margin_leftright"
   			android:layout_width="match_parent"
   			android:layout_height="wrap_content">
       	    
       	</LinearLayout>
	</ScrollView>
</LinearLayout>
