<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_height="@dimen/bussiness_item_height"
        android:orientation="horizontal">
        <TextView 
            android:text="暂无加入任何校友会"
	    	android:textColor="@color/organization_detail_text"
            android:layout_marginLeft="@dimen/bussiness_item_margin_left"
            android:singleLine="true"
            android:textSize="@dimen/bussiness_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
	<View 
	    android:id="@+id/bussinesscard_item_line"
	    android:visibility="gone"
    	android:layout_marginLeft="@dimen/bussiness_item_margin_left"
    	android:layout_width="match_parent"
    	android:layout_height="0.5dip"
	    android:background="@color/bussiness_card_line"/>

</LinearLayout>
