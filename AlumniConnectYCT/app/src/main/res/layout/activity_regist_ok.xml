<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bussiness_card_line" >
    <include layout="@layout/view_navigation"/>  
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <LinearLayout 
            android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent">
            <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/regist_fail_info_nouser_height"
			    android:textColor="@color/verification"
			    android:textSize="@dimen/regist_fail_info_nouser_text"
			    android:gravity="center_vertical"
			    android:paddingLeft="@dimen/regist_fail_info_item_margin_left"
			    android:text="您输入的内容为"/>
			<TextView 
			    android:id="@+id/regist_ok_name"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/regist_fail_info_nouser_height"
			    android:gravity="center_vertical"
			    android:textSize="@dimen/regist_fail_info_item_text"
			    android:textColor="@color/tab_text_press"
			    android:background="@android:color/white"
			    android:paddingLeft="@dimen/regist_fail_info_item_margin_left"
			    android:text="姓名："/>
			<View 
			    android:layout_height="0.5dip"
			    android:layout_width="match_parent"/>
			<TextView 
			    android:id="@+id/regist_ok_year"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/regist_fail_info_nouser_height"
			    android:gravity="center_vertical"
			    android:background="@android:color/white"
			    android:textSize="@dimen/regist_fail_info_item_text"
			    android:textColor="@color/tab_text_press"
			    android:paddingLeft="@dimen/regist_fail_info_item_margin_left"
			    android:text="学级："/>
			<View 
			    android:layout_height="0.5dip"
			    android:layout_width="match_parent"/>
			<TextView 
			    android:id="@+id/regist_ok_speciality"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/regist_fail_info_nouser_height"
			    android:gravity="center_vertical"
			    android:background="@android:color/white"
			   	android:textSize="@dimen/regist_fail_info_item_text"
			    android:textColor="@color/tab_text_press"
			    android:paddingLeft="@dimen/regist_fail_info_item_margin_left"
			    android:text="专业："/>
			<LinearLayout 
			    android:id="@+id/regist_ok_nolayout"
			    android:orientation="vertical"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    <TextView 
				    android:text="系统未匹配到您的信息，您可以选择重新输入或继续注册"
				    android:textSize="@dimen/regist_fail_info_nouser_text"
				    android:textColor="@color/regist_fail_info_text"
				    android:layout_gravity="center_horizontal"
				    android:gravity="left"			    
				    android:padding="@dimen/regist_fail_info_item_margin_left"
				    android:layout_height="wrap_content"
				    android:layout_width="match_parent"/>
				<TextView 
				    android:id="@+id/regist_ok_rewrite"
			        android:text="输入有误，重新输入"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
			        android:textSize="@dimen/login_edit_commit_text"
			        android:textColor="@android:color/white"
			   		android:layout_width="match_parent"
			   		android:layout_height="@dimen/activity_send_text2_height"
			        android:background="@color/tab_text_press"
			        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
			        android:layout_marginRight="@dimen/login_edit_margin_leftright"
			        android:textStyle="bold" />			
				<TextView 
				    android:id="@+id/regist_ok_commit"
			        android:text="没有错误，进行手工验证"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
			        android:textSize="@dimen/login_edit_commit_text"
			        android:textColor="@android:color/white"
			   		android:layout_width="match_parent"
			   		android:layout_height="@dimen/activity_send_text2_height"
			        android:background="@color/tab_text_press"
			        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
		        	android:layout_marginRight="@dimen/login_edit_margin_leftright"
	        		android:layout_marginTop="@dimen/login_edit_commit_margin_top"
			        android:layout_marginBottom="@dimen/regist_fail_info_nouser_margin"
			        android:textStyle="bold" />
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/regist_ok_layout"
			    android:orientation="vertical"
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent">
			    <TextView 
				    android:text="您可能的身份如下，请点击选择："
				   	android:textColor="@color/verification"
			    	android:textSize="@dimen/regist_fail_info_nouser_text"
			    	android:gravity="center_vertical"
			    	android:paddingLeft="@dimen/regist_fail_info_item_margin_left"
			    	android:layout_height="@dimen/regist_fail_info_nouser_height"
				    android:layout_width="match_parent"/>
			    <LinearLayout 
				    android:id="@+id/regist_ok_list"
				    android:background="@android:color/white"
				    android:orientation="vertical"
				    android:layout_height="wrap_content"
				    android:layout_width="match_parent">
			    </LinearLayout>
			    <RelativeLayout 
		            android:id="@+id/regist_ok_cancel_layout"
			        android:orientation="horizontal"
				    android:background="@android:color/white"
			    	android:layout_height="@dimen/regist_fail_info_item_height"
				    android:layout_width="match_parent">
			        <ImageView 
			            android:id="@+id/regist_ok_cancel"
			            android:src="@drawable/ic_verify_checkbox_nor"
			            android:layout_marginLeft="@dimen/regist_fail_info_item_image_margin"
			            android:layout_centerVertical="true"
			            android:layout_height="wrap_content"
			            android:layout_width="wrap_content"/>
			        <TextView 
					    android:text="输入错误，重新输入"
					    android:textColor="@android:color/black"
				    	android:gravity="center_vertical"
				    	android:layout_marginLeft="@dimen/regist_fail_info_item_margin_left"
				    	android:layout_height="@dimen/regist_fail_info_item_height"
					    android:layout_width="match_parent"/>
			    </RelativeLayout>
			    <View 
			        android:layout_marginTop="0.5dip"
			    	android:layout_height="0.5dip"
				    android:layout_width="match_parent"/>
			    <RelativeLayout 
		            android:id="@+id/regist_ok_later_layout"
			        android:orientation="horizontal"
				    android:background="@android:color/white"
			    	android:layout_height="@dimen/regist_fail_info_item_height"
				    android:layout_width="match_parent">
			        <ImageView 
			            android:id="@+id/regist_ok_later"
			            android:src="@drawable/ic_verify_checkbox_nor"
			            android:layout_marginLeft="@dimen/regist_fail_info_item_image_margin"
			            android:layout_centerVertical="true"
			            android:layout_height="wrap_content"
			            android:layout_width="wrap_content"/>
			        <TextView 
					    android:text="没有匹配到我的信息，我后续再手工认证"
					    android:background="@android:color/white"
					    android:textColor="@color/verification"
				    	android:gravity="center_vertical"
				    	android:layout_marginLeft="@dimen/regist_fail_info_item_margin_left"
				    	android:layout_height="@dimen/regist_fail_info_item_height"
					    android:layout_width="match_parent"/>
			    </RelativeLayout>
				<TextView 
			        android:id="@+id/regist_ok_next"
			        android:layout_gravity="center_horizontal"
			        android:text="下一步"
			        android:gravity="center"
			        android:textSize="@dimen/login_edit_commit_text"
			        android:textColor="@android:color/white"
			        android:background="@color/tab_text_press"
			   		android:layout_width="match_parent"
			   		android:layout_height="@dimen/activity_send_text2_height"
			        android:layout_marginTop="@dimen/login_edit_commit_margin_top"
			        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
			        android:layout_marginRight="@dimen/login_edit_margin_leftright"
			        android:textStyle="bold" />
			</LinearLayout>			
        </LinearLayout>
    </ScrollView>
</LinearLayout>
