<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/organization_item_height" >
	    <RelativeLayout 
	        android:id="@+id/adapter_messagecenter_image_layout"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/organization_item_image_margin_left">
   		    <ImageView 
		        android:id="@+id/adapter_messagecenter_image"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:scaleType="centerCrop"
		    	android:src="@drawable/ic_user_press"/>
	        <ImageView 
    			android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
	            android:src="@drawable/bg_usericon"/>
   		</RelativeLayout>
   		<TextView 
	        android:id="@+id/adapter_messagecenter_icon"
	        android:gravity="center"
	        android:textSize="@dimen/organization_item_news_text"
            android:background="@drawable/adapter_organization_newmessage"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/message_item_message_margin_right"
            android:layout_marginTop="2dip"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"/>
	    <LinearLayout 
	        android:orientation="vertical"
		    android:layout_toRightOf="@id/adapter_messagecenter_image_layout"
		    android:layout_centerVertical="true"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	    	<LinearLayout 
	    	    android:orientation="horizontal"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content">
	    	    <TextView 
				    android:textColor="@android:color/black"
				    android:textSize="@dimen/organization_item_title_text"
				    android:singleLine="true"
				    android:layout_weight="1"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
				    android:id="@+id/adapter_messagecenter_title"
				    android:layout_marginRight="@dimen/organization_item_image_margin_right"
				    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
	    	    <TextView 
		            android:textColor="@color/adpter_activity_desp"
				    android:textSize="@dimen/organization_item_otherinfo_text"
				    android:singleLine="true"
				    android:gravity="right"
				    android:layout_marginRight="@dimen/organization_item_image_margin_right"
				    android:layout_weight="1"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
				    android:id="@+id/adapter_messagecenter_time"/>
	    	</LinearLayout>
	        <com.rockerhieu.emojicon.EmojiconTextView 
	    		android:layout_marginTop="5dip"
	            android:textColor="@color/adpter_activity_desp"
			    android:textSize="@dimen/organization_item_otherinfo_text"
			    android:singleLine="true"
			    android:ellipsize="end"
			    android:layout_weight="1"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_messagecenter_content"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
	    </LinearLayout>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:background="@color/regist_title_bakcground"/>

</LinearLayout>
