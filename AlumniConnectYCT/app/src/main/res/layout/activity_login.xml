<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"
    	android:background="@mipmap/bg_login"
	    android:orientation="vertical" >
	
	    <include
	        layout="@layout/view_navigation">
	        
	    </include>
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_marginTop="@dimen/login_edit_margin_top"
	    	android:layout_width="@dimen/login_edit_width"
	        android:layout_height="@dimen/login_edit_height">
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:layout_weight="1"
	        	android:background="@mipmap/bg_login_input1"
	            android:gravity="center_vertical"
	    		android:layout_width="match_parent"
	    		android:layout_height="match_parent">
	            <ImageView 
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	                android:src="@mipmap/ic_login_user"
	        		android:layout_marginLeft="@dimen/login_edit_margin_leftright"
	        		android:layout_marginRight="@dimen/login_edit_margin_leftright"/>
	            <EditText 
	                android:id="@+id/login_username"
	                android:background="@null"
	                android:singleLine="true"
	                android:hint="邮箱/手机号"
		        	android:textColorHint="@color/activity_send_hint"
		        	android:textColor="@color/activity_send_line"
	                android:layout_marginRight="@dimen/login_edit_margin_leftright"
		        	android:inputType="text"
		        	android:imeOptions="actionNext"
	                android:paddingTop="10dip"
	    			android:paddingBottom="10dip"
	    			android:layout_width="match_parent"
	    			android:layout_height="wrap_content"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:layout_weight="1"
	            android:background="@mipmap/bg_login_input2"
	            android:layout_marginTop="5dip"
	            android:gravity="center_vertical"
	    		android:layout_width="match_parent"
	    		android:layout_height="match_parent">
	            <ImageView 
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	                android:src="@mipmap/ic_login_password"
	        		android:layout_marginLeft="@dimen/login_edit_margin_leftright"
	        		android:layout_marginRight="@dimen/login_edit_margin_leftright"/>
	            <EditText 
	                android:id="@+id/login_password"
		        	android:textColorHint="@color/activity_send_hint"
		        	android:textColor="@color/activity_send_line"
	                android:background="@null"
	                android:singleLine="true"
	                android:hint="请输入密码"
	                android:paddingTop="10dip"
	    			android:paddingBottom="10dip"
	                android:layout_marginRight="@dimen/login_edit_margin_leftright"
	                android:inputType="textPassword"
		        	android:imeOptions="actionGo"
	    			android:layout_width="match_parent"
	    			android:layout_height="wrap_content"/>
	        </LinearLayout>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/login_commit"
	        android:text="登录"
	        android:gravity="center"
	        android:textSize="@dimen/login_edit_commit_text"
	        android:textColor="@android:color/white"
	        android:background="@color/tab_text_press"
	   		android:layout_width="match_parent"
	        android:layout_height="@dimen/activity_send_text2_height"
	        android:layout_marginTop="@dimen/login_edit_commit_margin_top"
	        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
	        android:layout_marginRight="@dimen/login_edit_margin_leftright"
	        android:textStyle="bold" />    
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
	        android:layout_marginRight="@dimen/login_edit_margin_leftright"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/login_regist"
		        android:text="注册账号"
		        android:paddingTop="@dimen/login_edit_other_text_margin"
		        android:paddingBottom="@dimen/login_edit_other_text_margin"
	        	android:textColor="@android:color/white"
		        android:textSize="@dimen/login_edit_other_text"
		        android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
		        
		    </TextView>
		    <TextView 
	            android:id="@+id/login_forget"
		        android:paddingTop="@dimen/login_edit_other_text_margin"
		        android:paddingBottom="@dimen/login_edit_other_text_margin"
		        android:gravity="right"
		        android:text="忘记密码"
	        	android:textColor="@android:color/white"
		        android:textSize="@dimen/login_edit_other_text"
		        android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		        
	    </LinearLayout>
	</LinearLayout>
</ScrollView>

