<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white" >
    <LinearLayout 
		android:orientation="horizontal"
        android:layout_marginLeft="@dimen/regist_content_margin_left"
        android:layout_marginRight="@dimen/regist_content_margin_right"
        android:layout_height="@dimen/regist_content_height"
        android:gravity="center_vertical"
		android:layout_width="fill_parent">
        <EditText 
        	android:id="@+id/view_add_job_year"
            android:hint="0000年至0000年"
 			android:textSize="@dimen/activity_send_left_text"
            android:background="@null"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="5"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dip"
 			android:textColorHint="@color/activity_send_hint"
 			android:textColor="@color/activity_send_line"/>
    </LinearLayout>
    <View 
         android:background="@color/regist_title_line"
         android:layout_height="0.5dip"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/regist_content_margin_left"/>
    <LinearLayout 
		android:orientation="horizontal"
        android:layout_marginLeft="@dimen/regist_content_margin_left"
        android:layout_marginRight="@dimen/regist_content_margin_right"
        android:layout_height="@dimen/regist_content_height"
        android:gravity="center_vertical"
		android:layout_width="fill_parent">
        <EditText 
        	android:id="@+id/view_add_job_compname"
            android:hint="请输入公司名称"
 			android:textSize="@dimen/activity_send_left_text"
            android:background="@null"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="5"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dip"
 			android:textColorHint="@color/activity_send_hint"
 			android:textColor="@color/activity_send_line"/>
		<com.renyu.alumni.myview.SwitchButton
    		android:text="公开"
		    android:textSize="@dimen/regist_content_hide_text"
		    android:textColor="@color/regist_title_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
       		android:id="@+id/view_add_job_compname_switch"
       		android:checked="true"
       		app:withTextInterval="@dimen/regist_content_hide_margin_left"
       		app:frameDrawable="@drawable/switch_frame"
       		app:stateDrawable="@drawable/selector_switch_state"
       		app:stateMaskDrawable="@drawable/switch_state_mask"
       		app:sliderDrawable="@drawable/selector_switch_slider"/>
     </LinearLayout>     
     <View 
         android:background="@color/regist_title_line"
         android:layout_height="0.5dip"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/regist_content_margin_left"/>
</LinearLayout>
