<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >    
    <TextView 
        android:id="@+id/adapter_organization_title"
        android:textSize="@dimen/regist_title_text"
        android:textStyle="bold"
        android:textColor="@color/regist_title_text"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/regist_title_margin_left"
        android:background="@color/regist_title_bakcground"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/regist_title_height"/>
    <RelativeLayout 
        android:id="@+id/adapter_organization_new_adder"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    <RelativeLayout 
	        android:id="@+id/adapter_organization_new_adder_image_layout"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	        <ImageView 
		        android:id="@+id/adapter_organization_new_adder_image"
			    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
		        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/ic_organization_class"/>
	    </RelativeLayout>
	    <TextView 
	        android:id="@+id/adapter_organization_new_adder_num"
	        android:layout_marginRight="@dimen/organization_item_news_margin_right"
	        android:textSize="@dimen/organization_item_news_text"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:textColor="@android:color/white"
	    	android:background="@drawable/adapter_organization_newmessage"
	    	android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"/>
	    <LinearLayout 
	        android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
		    android:layout_toLeftOf="@id/adapter_organization_new_adder_num"
		    android:layout_toRightOf="@id/adapter_organization_new_adder_image_layout">	        
			<TextView 
			    android:textColor="@android:color/black"
			    android:textSize="@dimen/organization_item_title_text"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"			    
			    android:id="@+id/adapter_organization_new_adder_title"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
			<TextView 
	            android:textColor="@color/adpter_activity_desp"
			    android:textSize="@dimen/organization_item_otherinfo_text"
			    android:singleLine="true"			    
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_organization_new_adder_otherinfo"
		    	android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"
		    	android:layout_marginBottom="@dimen/organization_item_image_margin_bottom"/>
	    </LinearLayout>
	</RelativeLayout>
	
    <RelativeLayout 
        android:id="@+id/adapter_organization_new_apply"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    <ImageView 
	        android:id="@+id/adapter_organization_new_apply_image"
		    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
	        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
	    	android:layout_width="@dimen/organization_item_image_heightwidth"
	    	android:layout_height="@dimen/organization_item_image_heightwidth"
	    	android:src="@drawable/ic_organization_class"/>
	    <TextView 
	        android:id="@+id/adapter_organization_new_apply_resultback"
	        android:layout_marginRight="@dimen/organization_item_news_margin_right"
	        android:textSize="@dimen/organization_item_title_text"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:text="待审"
	    	android:textColor="@color/organization_detail_text"
	    	android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"/>
	    <LinearLayout 
	        android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_toLeftOf="@id/adapter_organization_new_apply_resultback"
	    	android:layout_toRightOf="@id/adapter_organization_new_apply_image"
		    android:layout_marginTop="@dimen/organization_item_image_margin_bottom">	        
			<TextView 
			    android:textColor="@android:color/black"
			    android:textSize="@dimen/organization_item_title_text"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"			    
			    android:id="@+id/adapter_organization_new_apply_title"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
			<TextView 
	            android:textColor="@color/adpter_activity_desp"
			    android:textSize="@dimen/organization_item_otherinfo_text"
			    android:singleLine="true"			    
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_organization_new_apply_otherinfo"
		    	android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"
		    	android:layout_marginBottom="@dimen/organization_item_image_margin_bottom"/>
	    </LinearLayout>
	</RelativeLayout>
    
	<RelativeLayout 
        android:id="@+id/adapter_organization_result"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    <RelativeLayout 
	        android:id="@+id/adapter_organization_result_image_layout"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	        <ImageView 
		        android:id="@+id/adapter_organization_result_image"
		        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
			    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/ic_organization_class"/>	        
	        <ImageView 
	            android:id="@+id/adapter_organization_result_image_mask"
	            android:visibility="gone"
		        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
			    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/bg_usericon"/>
		    <ImageView 
		        android:id="@+id/adapter_organization_result_image_verify"
		        android:visibility="gone"
			    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
		        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
		    	android:layout_width="@dimen/organization_item_image_heightwidth"
		    	android:layout_height="@dimen/organization_item_image_heightwidth"
		    	android:src="@drawable/ic_user_verification_no"/>
	    </RelativeLayout>
	    <TextView 
	        android:id="@+id/adapter_organization_resultback"
	        android:layout_marginRight="@dimen/organization_item_news_margin_right"
	        android:textSize="@dimen/organization_item_title_text"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:textColor="@color/organization_detail_text"
	    	android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"/>
	    <LinearLayout 
	        android:orientation="vertical"
	    	android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
		    android:layout_toLeftOf="@id/adapter_organization_resultback"
		    android:layout_toRightOf="@id/adapter_organization_result_image_layout"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	        <TextView 
			    android:textColor="@android:color/black"
			    android:textSize="@dimen/organization_item_title_text"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_organization_result_title"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
	        <TextView 
	            android:textColor="@color/adpter_activity_desp"
			    android:textSize="@dimen/organization_item_otherinfo_text"
			    android:singleLine="true"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:id="@+id/adapter_organization_result_title_otherinfo"
			    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
			    android:layout_marginBottom="@dimen/organization_item_image_margin_bottom"
			    android:layout_marginRight="@dimen/organization_item_image_margin_right"
			    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
	    </LinearLayout>
	</RelativeLayout>	
    <TextView 
        android:id="@+id/adapter_organization_no"
        android:visibility="gone"
        android:textSize="@dimen/regist_title_text"
        android:textColor="@color/regist_title_text"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/organization_item_image_margin_bottom"
        android:paddingBottom="@dimen/organization_item_image_margin_bottom"
        android:paddingLeft="@dimen/regist_title_margin_left"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
	<View 
	    android:layout_marginTop="2dip"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:background="@color/regist_title_bakcground"/>
</LinearLayout>
