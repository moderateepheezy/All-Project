<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/view_activity_image_desp_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_activity_default"/>
	<TextView 
        android:id="@+id/view_activity_image_desp_text"
        android:singleLine="true"
        android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/activity_detail_pic_text"
        android:layout_marginLeft="@dimen/activity_detail_title_margin"
        android:layout_marginRight="@dimen/activity_detail_title_margin"/>
</LinearLayout>
