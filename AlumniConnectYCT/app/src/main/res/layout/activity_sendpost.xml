<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2" >
    <include 
        layout="@layout/view_navigation">
        
    </include>
	<TextView 
	    android:text="选择帖子类型"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="@dimen/send_post_title_margin_left"
	    android:layout_marginRight="@dimen/send_post_title_margin_left"
	    android:textSize="@dimen/send_post_title_text"
	    android:textColor="#a6a6a6"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="@dimen/send_post_title_margin_left"
	    android:layout_marginRight="@dimen/send_post_title_margin_left"
	    android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	<RelativeLayout 
		    android:layout_weight="1"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content">
    	    <TextView 
    	        android:id="@+id/sendpost_type1"
			    android:text="招聘"
			    android:layout_centerInParent="true"
		    	android:background="@color/tab_text_press"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip"
			    android:paddingTop="8dip"
			    android:paddingBottom="8dip"
		    	android:layout_width="70dip"
		    	android:gravity="center"
		    	android:textColor="@android:color/white"
		    	android:layout_height="wrap_content"/>
    	</RelativeLayout>
    	<RelativeLayout 
		    android:layout_weight="1"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content">
    	    <TextView 
    	        android:id="@+id/sendpost_type2"
			    android:text="合作"
			    android:layout_centerInParent="true"
			    android:background="@android:color/white"
			    android:textColor="@color/tab_text_press"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip"
			    android:paddingTop="8dip"
			    android:paddingBottom="8dip"
		    	android:layout_width="70dip"
		    	android:gravity="center"
		    	android:layout_height="wrap_content"/>
    	</RelativeLayout>
    	<RelativeLayout 
		    android:layout_weight="1"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content">
    	    <TextView 
    	        android:id="@+id/sendpost_type3"
			    android:text="公告"
			    android:layout_centerInParent="true"
			    android:background="@android:color/white"
			    android:textColor="@color/tab_text_press"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip"
			    android:paddingTop="8dip"
			    android:paddingBottom="8dip"
		    	android:layout_width="70dip"
		    	android:gravity="center"
		    	android:layout_height="wrap_content"/>
    	</RelativeLayout>
    	<RelativeLayout 
		    android:layout_weight="1"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content">
    	    <TextView 
    	        android:id="@+id/sendpost_type4"
			    android:text="求职"
			    android:layout_centerInParent="true"
			    android:background="@android:color/white"
			    android:textColor="@color/tab_text_press"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip"
			    android:paddingTop="8dip"
			    android:paddingBottom="8dip"
		    	android:layout_width="70dip"
		    	android:layout_height="wrap_content"
		    	android:gravity="center"/>
    	</RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/sendpost_label_layout"
	    android:visibility="gone"
	    android:layout_marginTop="10dip"
    	android:layout_marginLeft="@dimen/send_post_title_margin_left"
    	android:layout_marginRight="@dimen/send_post_title_margin_left"
	    android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
	    <TextView 
		    android:text="标签"
	    	android:textSize="@dimen/send_post_title_text"
		    android:textColor="#a6a6a6"
	   		android:layout_width="match_parent"
	   		android:layout_height="wrap_content"/>
		<com.eyeem.chips.ChipsTextView
		    android:id="@+id/sendpost_label_value"
		    android:layout_marginTop="3dip"
		    android:padding="5dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
	</LinearLayout>
	
	<EditText 
	    android:id="@+id/sendpost_title"
	    android:background="@android:color/white"
	    android:layout_marginTop="10dip"
	    android:textSize="@dimen/send_post_label_text"
	    android:hint="帖子主题（限40字以内哦~）"
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:paddingLeft="@dimen/send_post_title_margin_left"
	    android:paddingRight="@dimen/send_post_title_margin_left"
	    android:textColor="@color/send_post_edit"
   		android:layout_width="match_parent"
   		android:layout_height="50dip"/>
	<EditText 
	    android:id="@+id/sendpost_content"
	    android:background="@android:color/white"
	    android:layout_marginTop="20dip"
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:paddingLeft="@dimen/send_post_title_margin_left"
	    android:paddingRight="@dimen/send_post_title_margin_left"
	    android:textSize="@dimen/send_post_label_text"
	    android:hint="亲，说点什么吧"
	    android:gravity="left|top"
	    android:textColor="@color/send_post_edit"
   		android:layout_width="match_parent"
   		android:layout_height="150dip"/>
	<GridView 
	    android:id="@+id/sendpost_gridview"
   		android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:columnWidth="86dip"
	    android:verticalSpacing="11dip"
	    android:horizontalSpacing="11dip"
	    android:cacheColorHint="@android:color/transparent"
	    android:listSelector="@android:color/transparent"
	    android:layout_margin="@dimen/send_post_title_margin_left"
	    android:gravity="center"
	    android:numColumns="3">
	    
	</GridView>
</LinearLayout>
