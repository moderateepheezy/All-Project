<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/regist_title_bakcground" >
    <include 
        layout="@layout/view_navigation">
        
    </include>
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
    	<LinearLayout 
    	    android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
    	    <ScrollView 
		        android:fadingEdge="none"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
		        <LinearLayout 
			        android:orientation="vertical"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        <TextView 
				        android:textSize="@dimen/regist_title_text"
				        android:textStyle="bold"
				        android:text="申请人"
		    			android:background="@color/regist_title_bakcground"
				        android:textColor="@color/regist_title_text"
				        android:gravity="center_vertical"
				        android:paddingLeft="@dimen/regist_title_margin_left"
						android:layout_width="fill_parent"
						android:layout_height="@dimen/regist_title_height"/>
				    <RelativeLayout 
				        android:id="@+id/organization_detail_result"
		    			android:background="@android:color/white"
					    android:layout_width="match_parent"
					    android:layout_height="@dimen/organization_item_height" >
					    <ImageView 
				        	android:id="@+id/organization_review_class_image"
		        			android:scaleType="centerCrop"
					        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
						    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
					    	android:layout_width="@dimen/organization_item_image_heightwidth"
					    	android:layout_height="@dimen/organization_item_image_heightwidth"
					    	android:src="@drawable/ic_organization_user_default"/>	        
				        <ImageView 
				            android:id="@+id/organization_review_class_image_mask"
					        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
						    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
					    	android:layout_width="@dimen/organization_item_image_heightwidth"
					    	android:layout_height="@dimen/organization_item_image_heightwidth"
					    	android:src="@drawable/bg_usericon"/>
					    <ImageView 
					        android:id="@+id/organization_review_class_image_verify"
					        android:visibility="gone"
						    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
					        android:layout_marginLeft="@dimen/organization_item_image_margin_left"
					    	android:layout_width="@dimen/organization_item_image_heightwidth"
					    	android:layout_height="@dimen/organization_item_image_heightwidth"
					    	android:src="@drawable/ic_user_verification_no"/>
					    <ImageView 
					        android:id="@+id/organization_review_class_arror"
					        android:src="@drawable/ic_next"
					        android:layout_marginRight="@dimen/organization_item_news_margin_right"
					    	android:layout_centerVertical="true"
					        android:layout_alignParentRight="true"
					    	android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"/>
					    <LinearLayout 
					        android:orientation="vertical"
						    android:layout_toRightOf="@id/organization_review_class_image"
						    android:layout_toLeftOf="@id/organization_review_class_arror"
						    android:layout_centerVertical="true"
					    	android:layout_width="wrap_content"
					    	android:layout_height="wrap_content">
					        <TextView 
							    android:textColor="@android:color/black"
							    android:textSize="@dimen/organization_item_title_text"
							    android:singleLine="true"
						    	android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
							    android:id="@+id/organization_review_class_title"
							    android:layout_marginRight="@dimen/organization_item_image_margin_right"
							    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
					        <TextView 
					            android:textColor="@color/adpter_activity_desp"
							    android:textSize="@dimen/organization_item_otherinfo_text"
							    android:singleLine="true"
						    	android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
							    android:id="@+id/organization_review_class_otherinfo"
							    android:layout_marginTop="@dimen/organization_item_image_margin_bottom"
							    android:layout_marginRight="@dimen/organization_item_image_margin_right"
							    android:layout_marginLeft="@dimen/organization_item_image_margin_right"/>
					    </LinearLayout>
					</RelativeLayout>
					<TextView 
				        android:textSize="@dimen/regist_title_text"
				        android:textStyle="bold"
				        android:text="创建班级"
				        android:textColor="@color/regist_title_text"
				        android:gravity="center_vertical"
				        android:paddingLeft="@dimen/regist_title_margin_left"
				        android:background="@color/regist_title_bakcground"
						android:layout_width="fill_parent"
						android:layout_height="@dimen/regist_title_height"/>
					<LinearLayout 
		    			android:background="@android:color/white"
						android:layout_width="fill_parent"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_height="@dimen/organization_item_image_heightwidth">
						<TextView 
					    	android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
						    android:textColor="@color/adpter_activity_desp"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:layout_width="@dimen/organization_reviewclass_width"
							android:text="入学年份："
							android:layout_height="wrap_content"/>
						<TextView 
						    android:id="@+id/organization_review_class_year"
						    android:textColor="@android:color/black"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>
					    
					</LinearLayout>
					<View 
					    android:layout_height="0.5dip"
						android:layout_width="fill_parent"
					    android:background="@color/regist_title_bakcground"/>
					<LinearLayout 
		    			android:background="@android:color/white"
						android:layout_width="fill_parent"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_height="@dimen/organization_item_image_heightwidth">
						<TextView 
					    	android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
						    android:textColor="@color/adpter_activity_desp"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:text="学位："
							android:layout_width="@dimen/organization_reviewclass_width"
							android:layout_height="wrap_content"/>
						<TextView 
						    android:id="@+id/organization_review_class_degree"
						    android:textColor="@android:color/black"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>
					</LinearLayout>
					<View 
					    android:layout_height="0.5dip"
						android:layout_width="fill_parent"
					    android:background="@color/regist_title_bakcground"/>
					<LinearLayout 
		    			android:background="@android:color/white"
						android:layout_width="fill_parent"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_height="@dimen/organization_item_image_heightwidth">
						<TextView 
					    	android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
						    android:textColor="@color/adpter_activity_desp"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:text="院系："
							android:layout_width="@dimen/organization_reviewclass_width"
							android:layout_height="wrap_content"/>
						<TextView 
						    android:id="@+id/organization_review_class_department"
						    android:textColor="@android:color/black"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>
					</LinearLayout>
					<View 
					    android:layout_height="0.5dip"
						android:layout_width="fill_parent"
					    android:background="@color/regist_title_bakcground"/>
					<LinearLayout 
		    			android:background="@android:color/white"
						android:layout_width="fill_parent"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_height="@dimen/organization_item_image_heightwidth">
						<TextView 
					    	android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
						    android:textColor="@color/adpter_activity_desp"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:text="班级名称："
							android:layout_width="@dimen/organization_reviewclass_width"
							android:layout_height="wrap_content"/>
						<TextView 
						    android:id="@+id/organization_review_class_class"
						    android:textColor="@android:color/black"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>
					</LinearLayout>
					<View 
					    android:layout_height="0.5dip"
						android:layout_width="fill_parent"
					    android:background="@color/regist_title_bakcground"/>
					<LinearLayout 
		    			android:background="@android:color/white"
						android:layout_width="fill_parent"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_height="@dimen/organization_item_image_heightwidth">
						<TextView 
					    	android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
						    android:textColor="@color/adpter_activity_desp"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:text="班主任："
							android:layout_width="@dimen/organization_reviewclass_width"
							android:layout_height="wrap_content"/>
						<TextView 
						    android:id="@+id/organization_review_class_handmaster"
						    android:textColor="@android:color/black"
						    android:textSize="@dimen/organization_detail_item_message_margin"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<LinearLayout 
						    android:orientation="horizontal"
						    android:gravity="right|center"
						    android:layout_marginRight="30dip"
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
						    <TextView 
						        android:id="@+id/reviewclass_flag_text"
						        android:text="核实成功"
						        android:textColor="@color/reviewclass_ok"
						        android:textSize="@dimen/organization_reviewclass_text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
						    	android:layout_marginRight="10dip"/>
						    <ImageView 
						        android:id="@+id/reviewclass_flag_image"
						        android:src="@drawable/reviewclass_ok"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
						</LinearLayout>
					</LinearLayout>
					<View 
					    android:layout_height="0.5dip"
						android:layout_width="fill_parent"
					    android:background="@color/regist_title_bakcground"/>
					<RelativeLayout 
					    android:layout_width="fill_parent"
						android:layout_height="fill_parent" >
					    <LinearLayout 
					        android:id="@+id/organization_review_class_nohandmaster"
		    				android:background="@android:color/white"
							android:layout_width="fill_parent"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:visibility="gone"
							android:layout_height="@dimen/organization_item_image_heightwidth">
							<TextView 
							    android:id="@+id/organization_review_class_notext"
						    	android:layout_marginLeft="@dimen/organization_detail_item_admin_margin"
							    android:textColor="@color/adpter_activity_desp"
							    android:textSize="@dimen/organization_detail_item_message_margin"
								android:layout_weight="1"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"/>
							<ImageView 
						        android:src="@drawable/ic_next"
						        android:layout_marginRight="@dimen/organization_item_news_margin_right"
						    	android:layout_centerVertical="true"
						    	android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"/>
						</LinearLayout>
						<LinearLayout 
						    android:id="@+id/organization_review_class_layout"
						    android:orientation="vertical"
					    	android:layout_width="match_parent"
					    	android:layout_height="wrap_content">
						    
						</LinearLayout>
					</RelativeLayout>
					
			    </LinearLayout>
		    </ScrollView>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        <LinearLayout 
			        android:id="@+id/organization_review_class_left"
			        android:orientation="horizontal"
			        android:gravity="center"
			        android:layout_weight="1"
			       	android:layout_width="match_parent"
			       	android:background="@color/tab_bg"
			       	android:layout_height="@dimen/activity_detail_enroll_height">
		            <ImageView 
		                android:src="@drawable/ic_open"
			            android:gravity="center_vertical"
		        		android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:layout_marginRight="@dimen/activity_detail_enroll_padding"/>
		            <TextView 
			            android:text="审核通过"         
			            android:textColor="@color/adpter_activity_desp"
			            android:gravity="center_vertical"
			            android:textSize="@dimen/activity_detail_num_text"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" />
		        </LinearLayout>
		        <LinearLayout 
		            android:id="@+id/organization_review_class_right"
		            android:orientation="horizontal"
		            android:gravity="center"
		            android:layout_weight="1"
		        	android:layout_width="match_parent"
		        	android:background="@color/tab_bg"
		        	android:layout_height="@dimen/activity_detail_enroll_height">
		            <ImageView 
		                android:src="@drawable/ic_delete_activity"
			            android:gravity="center_vertical"
		        		android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:layout_marginRight="@dimen/activity_detail_enroll_padding"/>
		            <TextView 
			            android:text="审核拒绝"         
			            android:textColor="@color/adpter_activity_desp"
			            android:gravity="center_vertical"
			            android:textSize="@dimen/activity_detail_num_text"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content" />
		        </LinearLayout>
			</LinearLayout>
    	</LinearLayout>
    </RelativeLayout>
    
</LinearLayout>
