<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_intro_bg"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/splash1_right"
        android:layout_marginTop="52dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip"
        android:visibility="invisible"
        android:src="@drawable/splash_news2"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <ImageView 
        android:id="@+id/splash1_left"
        android:layout_marginTop="128dip"
        android:visibility="invisible"
        android:src="@drawable/splash_news1"
        android:layout_marginLeft="40dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<ImageView 
	    android:src="@drawable/splash_bottom1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="60dip"
    	android:layout_centerHorizontal="true"
    	android:layout_alignParentBottom="true"/>
</RelativeLayout>
