<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <include 
        layout="@layout/view_navigation">
        
    </include>
    <ScrollView 
        android:fadingEdge="none"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
            <TextView 
		        android:id="@+id/createclass_title"
			    android:textSize="@dimen/login_edit_commit_text"
			    android:textColor="@color/tab_text_press"
			    android:gravity="center"
		        android:layout_marginTop="@dimen/login_edit_commit_margin_top"
		   		android:layout_width="fill_parent"
		   		android:layout_height="wrap_content"/>
		    <LinearLayout 
		        android:layout_marginTop="@dimen/login_edit_commit_margin_top"
			    android:orientation="horizontal"
			    android:layout_marginLeft="@dimen/activity_send_scroll_margin"
			    android:layout_marginRight="@dimen/activity_send_scroll_margin"
			   	android:gravity="center_vertical"
		   		android:layout_width="match_parent"
		   		android:layout_height="wrap_content">
			    <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="5"
			        android:textSize="@dimen/activity_send_left_text"
			        android:textColor="@color/tab_text_press"
			        android:text="班主任姓名"/>
			    <EditText 
			        android:textColor="@color/activity_send_line"
			        android:layout_weight="2"
			        android:paddingLeft="@dimen/activity_send_padding_leftright"
			        android:paddingRight="@dimen/activity_send_padding_leftright"
			        android:paddingTop="@dimen/activity_send_padding_topbottom"
			        android:paddingBottom="@dimen/activity_send_padding_topbottom"
			        android:id="@+id/createclass_headmaster_name"
			        android:inputType="text"
			        android:imeOptions="actionNext"
			        android:background="@drawable/rounded_edittext" 
			        android:textSize="@dimen/activity_send_left_text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout 
		        android:layout_marginTop="@dimen/login_edit_commit_margin_bottom"
			    android:orientation="horizontal"
			    android:layout_marginLeft="@dimen/activity_send_scroll_margin"
			    android:layout_marginRight="@dimen/activity_send_scroll_margin"
			   	android:gravity="center_vertical"
		   		android:layout_width="match_parent"
		   		android:layout_height="wrap_content">
			    <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="5"
			        android:textSize="@dimen/activity_send_left_text"
			        android:textColor="@color/tab_text_press"
			        android:text="班级名称"/>
			    <EditText 
			        android:textColor="@color/activity_send_line"
			        android:layout_weight="2"
			        android:paddingLeft="@dimen/activity_send_padding_leftright"
			        android:paddingRight="@dimen/activity_send_padding_leftright"
			        android:paddingTop="@dimen/activity_send_padding_topbottom"
			        android:paddingBottom="@dimen/activity_send_padding_topbottom"
			        android:id="@+id/createclass_name"
			        android:inputType="text"
			        android:imeOptions="actionGo"
			        android:background="@drawable/rounded_edittext" 
			        android:textSize="@dimen/activity_send_left_text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			<TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:textSize="12sp"
		        android:gravity="center"
		        android:textColor="@color/loginout"
			    android:text="请输入能唯一标识您班级的名称，\n如PB9805，SA0104，7806"/>
			<TextView 
		        android:id="@+id/createclass_commit"
		        android:layout_gravity="center_horizontal"
		        android:text="创建班级"
		        android:gravity="center"
		        android:textSize="@dimen/login_edit_commit_text"
		        android:textColor="@android:color/white"
		   		android:layout_width="match_parent"
		   		android:layout_height="@dimen/activity_send_text2_height"
		        android:background="@color/tab_text_press"
		        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
		        android:layout_marginRight="@dimen/login_edit_margin_leftright"
		        android:layout_marginTop="@dimen/login_edit_commit_margin_top"
		        android:layout_marginBottom="@dimen/login_edit_commit_margin_top"
		        android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
