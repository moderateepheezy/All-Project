<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <include 
        layout="@layout/view_navigation"/>
    <ScrollView 
        android:fadeScrollbars="true"
        android:fadingEdge="none"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout 
	        android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent">
	        <RelativeLayout 
		    	android:layout_width="match_parent"
		    	android:layout_height="@dimen/activity_send_comp">
			    <ImageView 
			        android:src="@mipmap/ic_right"
			        android:layout_centerInParent="true"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"/>
			</RelativeLayout>
			<TextView 
			    android:text="活动正在提交，请耐心等待"
			    android:textSize="@dimen/activity_send_text"
			    android:textColor="@color/tab_text_press"
			    android:gravity="center"
		   		android:layout_width="fill_parent"
		   		android:layout_height="wrap_content"/>
			
			<TextView 
			    android:id="@+id/activity_send_comp_new"
			    android:text="返回"
			    android:textSize="@dimen/activity_send_text2"
			    android:textColor="@android:color/white"
			    android:gravity="center"
			    android:textStyle="bold"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginTop="@dimen/activity_send_text2_margin_top"
		   		android:layout_width="match_parent"
		   		android:layout_height="@dimen/activity_send_text2_height"
		        android:background="@color/tab_text_press"
		        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
		        android:layout_marginRight="@dimen/login_edit_margin_leftright"/>
			<TextView 
			    android:id="@+id/activity_send_comp_my"
			    android:text="查看我的活动"
			    android:textSize="@dimen/activity_send_text2"
			    android:textColor="@android:color/white"
			    android:gravity="center"
			    android:textStyle="bold"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginTop="@dimen/activity_send_text3_margin_top"
		   		android:layout_width="match_parent"
		   		android:layout_height="@dimen/activity_send_text2_height"
		        android:background="@color/tab_text_press"
		        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
		        android:layout_marginRight="@dimen/login_edit_margin_leftright"/>
			<TextView 
			    android:id="@+id/activity_send_comp_admin"
			    android:text="联系管理员"
			    android:textSize="@dimen/activity_send_text2"
			    android:textColor="@android:color/white"
			    android:gravity="center"
			    android:textStyle="bold"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginTop="@dimen/activity_send_text3_margin_top"
		   		android:layout_width="match_parent"
		   		android:layout_height="@dimen/activity_send_text2_height"
		        android:background="@color/tab_text_press"
		        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
		        android:layout_marginRight="@dimen/login_edit_margin_leftright"/>
	    </LinearLayout>
    </ScrollView>
    
	
</LinearLayout>
