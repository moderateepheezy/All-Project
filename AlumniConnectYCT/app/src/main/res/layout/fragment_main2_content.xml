<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@android:color/white" >
        <FrameLayout 
	        android:id="@+id/fragment_main2_realtabcontent"
	        android:background="@android:color/transparent"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1">
	        
	    </FrameLayout>
	    <RelativeLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
			<RelativeLayout 
			    android:background="@drawable/main2_content_tabhost_bg"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content">
		        <android.support.v4.app.FragmentTabHost
				    android:id="@+id/fragment_main2_content_tabhost"
				    android:visibility="gone"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">
				    
				</android.support.v4.app.FragmentTabHost>
			    <ImageView 
				    android:id="@+id/fragment_main2_content_send"
				    android:src="@drawable/main2_content_tabhost_add"
				    android:layout_centerInParent="true"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"/>
			    <LinearLayout 
			        android:id="@+id/fragment_main2_content_public_layout"
			        android:orientation="vertical"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="18dip"
			        android:layout_marginLeft="30dip"
			        android:gravity="center">
				    <ImageView 
				        android:id="@+id/fragment_main2_content_public_image"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/ic_main2_content_public_press"/>
				    <TextView 
				        android:id="@+id/fragment_main2_content_public_text"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="11sp"
				        android:layout_marginTop="2dip"
				        android:textColor="#50a3ef"
						android:text="公共频道"/>
			    </LinearLayout>
			    <LinearLayout 
			        android:id="@+id/fragment_main2_content_inner_layout"
			        android:orientation="vertical"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_marginTop="18dip"
			        android:layout_marginRight="30dip"
			        android:gravity="center">
				    <ImageView 
				        android:id="@+id/fragment_main2_content_inner_image"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/ic_main2_content_people_normal"/>
				    <TextView 
				        android:id="@+id/fragment_main2_content_inner_text"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="11sp"
				        android:textColor="#b2b2b2"
				        android:layout_marginTop="2dip"
						android:text="个人频道"/>
			    </LinearLayout>
			    
			</RelativeLayout>
	    </RelativeLayout>
    </LinearLayout>
  	<RelativeLayout 
        android:id="@+id/fragment_main2_content_sendlayout" 
        android:background="@drawable/fragment_main2_content_sendbg" 
        android:visibility="gone"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >
    	<LinearLayout 
    	    android:orientation="vertical" 
    	    android:layout_centerInParent="true"
    	    android:layout_width="fill_parent" 
    	    android:layout_height="wrap_content" >
    	    <LinearLayout 
    	        android:id="@+id/fragment_main2_content_sendpost"
       	        android:layout_width="match_parent"
       	        android:layout_height="wrap_content"
       	        android:layout_marginBottom="40dip"
       	        android:layout_marginLeft="20dip"
       	        android:layout_marginRight="20dip"
       	        android:orientation="vertical">
       	        <ImageView 
       	            android:layout_gravity="center_horizontal"
       	            android:layout_width="wrap_content"
       	            android:layout_height="wrap_content"
       	            android:src="@drawable/bt_send_post"/>
				<TextView 
				    android:text="帖子将发表在公共模块，所有科大人用户都能看到，并和您回帖或私信"
				    android:layout_marginTop="20dip"
       	        	android:layout_marginLeft="40dip"
       	        	android:layout_marginRight="40dip"
       	        	android:textSize="@dimen/fragment_main2_content_textsize"
       	        	android:textColor="@color/searchcop_text"
       	            android:layout_width="wrap_content"
       	            android:layout_height="wrap_content"/>       	        
       	    </LinearLayout>
       	    <LinearLayout 
       	        android:id="@+id/fragment_main2_content_connections"
       	        android:layout_width="match_parent"
       	        android:layout_height="wrap_content"
       	        android:orientation="vertical"
       	        android:layout_marginLeft="20dip"
       	        android:layout_marginRight="20dip"
       	        android:layout_marginTop="30dip">
       	        <ImageView 
       	            android:layout_gravity="center_horizontal"
       	            android:layout_width="wrap_content"
       	            android:layout_height="wrap_content"
       	            android:src="@drawable/bt_find_person"/>
				<TextView 
				    android:text="您可以找到您需要的，并联系Ta"
       	        	android:textSize="@dimen/fragment_main2_content_textsize"
       	        	android:textColor="@color/searchcop_text"
				    android:layout_marginTop="20dip"
       	        	android:layout_marginLeft="40dip"
       	        	android:layout_marginRight="40dip"
       	            android:layout_width="wrap_content"
       	            android:layout_height="wrap_content"/> 
       	    </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
       	    android:gravity="center" 
       	    android:orientation="vertical" 
       	    android:background="@android:color/white"
       	    android:id="@+id/fragment_main2_content_sendlayout_close" 
	    	android:layout_alignParentBottom="true"
       	    android:layout_width="match_parent" 
       	    android:layout_height="50dip"  >
            <ImageView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:padding="10dip"
                android:src="@drawable/bt_close" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>