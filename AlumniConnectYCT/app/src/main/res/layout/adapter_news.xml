<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:background="@android:color/white"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
    	android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/adapter_news_margin_leftright"
    	android:layout_height="@dimen/adapter_news_image_width">
        <ImageView 
            android:id="@+id/adapter_news_image"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/adapter_news_margin_leftright"
    		android:layout_width="@dimen/adapter_news_image_width"
    		android:layout_height="@dimen/adapter_news_image_height"/>
        <RelativeLayout 
    		android:layout_width="match_parent"
    		android:layout_height="match_parent">
            <TextView 
		        android:id="@+id/adapter_news_title"
		        android:text="123"
				android:layout_marginTop="@dimen/adapter_news_margin_topbuttom"
	            android:layout_marginRight="@dimen/adapter_news_margin_leftright"
	            android:textSize="@dimen/adapter_news_text"
	            android:textColor="@android:color/black"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
            <TextView 
		        android:id="@+id/adapter_news_time"
		        android:layout_gravity="bottom"
		        android:text="123"
		        android:gravity="right"
		        android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/adapter_news_margin_topbuttom"
	            android:layout_marginRight="@dimen/adapter_news_margin_leftright"
	            android:textSize="@dimen/adapter_news_time_text"
	            android:textColor="@color/activity_send_hint"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
        </RelativeLayout>
	    
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="@color/bussiness_card_line"
        android:layout_marginLeft="@dimen/adapter_news_margin_leftright"
        android:layout_marginRight="@dimen/adapter_news_margin_leftright"/>
</LinearLayout>
