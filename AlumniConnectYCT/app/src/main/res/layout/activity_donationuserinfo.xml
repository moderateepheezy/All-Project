<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tab_bg" >
    <include 
        layout="@layout/view_navigation"/>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_weight="1"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
	    <LinearLayout 
	        android:layout_marginTop="@dimen/regist_title_height"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
	        <ImageView 
	            android:src="@mipmap/ic_danation_must"
	            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	        <EditText 
	            android:id="@+id/donation_userinfo_name"
	            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
	            android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
	            android:hint="捐赠人姓名"
				android:textSize="@dimen/activity_send_left_text"
	            android:background="@null"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="end"
				android:textColorHint="@color/activity_send_hint"
				android:textColor="@color/activity_send_hint"/>
	    </LinearLayout>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="match_parent"/>
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
	        <ImageView 
	            android:src="@mipmap/ic_danation_must"
	            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	        <EditText 
	            android:id="@+id/donation_userinfo_phone"
	            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
	            android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
	            android:hint="手机号码"
	            android:inputType="number"
				android:textSize="@dimen/activity_send_left_text"
	            android:background="@null"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="end"
				android:textColorHint="@color/activity_send_hint"
				android:textColor="@color/activity_send_hint"/>
	    </LinearLayout>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="match_parent"/>
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
	        <ImageView 
	            android:src="@mipmap/ic_danation_must"
	            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	        <EditText 
	            android:id="@+id/donation_userinfo_email"
	            android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft2"
	            android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
	            android:hint="Email"
				android:textSize="@dimen/activity_send_left_text"
	            android:background="@null"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="end"
				android:textColorHint="@color/activity_send_hint"
				android:textColor="@color/activity_send_hint"/>
	    </LinearLayout>
		<View 
		    android:layout_height="@dimen/activity_donation_userinfo_spe_height"
		    android:layout_width="match_parent"/>
		<LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
		    <EditText 
		        android:id="@+id/donation_userinfo_company"
		        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
		        android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
		        android:hint="捐赠人工作单位"
				android:textSize="@dimen/activity_send_left_text"
		        android:background="@null"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		        android:singleLine="true"
		      	android:ellipsize="end"
				android:textColorHint="@color/activity_send_hint"
				android:textColor="@color/activity_send_hint"/>
		</LinearLayout>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="match_parent"/>
		<LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
		    <EditText 
		        android:id="@+id/donation_userinfo_address"
		        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
		        android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
		        android:hint="通讯地址"
				android:textSize="@dimen/activity_send_left_text"
		        android:background="@null"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		        android:singleLine="true"
		      	android:ellipsize="end"
				android:textColorHint="@color/activity_send_hint"
				android:textColor="@color/activity_send_hint"/>
		</LinearLayout>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="match_parent"/>
		<LinearLayout 
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
		    <EditText 
		        android:id="@+id/donation_userinfo_zipcode"
		        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
		        android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
		        android:hint="邮编"
				android:textSize="@dimen/activity_send_left_text"
		        android:background="@null"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		        android:singleLine="true"
		      	android:ellipsize="end"
		      	android:imeOptions="actionDone"
				android:textColorHint="@color/activity_send_hint"
				android:textColor="@color/activity_send_hint"/>
		</LinearLayout>
		<View 
		    android:layout_height="@dimen/activity_donation_userinfo_spe_height"
		    android:layout_width="match_parent"/>
		<RelativeLayout 
	        android:background="@android:color/white"
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/activity_donation_userinfo_height">
		    <TextView 
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="@dimen/activity_donation_userinfo_marginleft3"
		        android:text="是否匿名"
				android:textSize="@dimen/activity_send_left_text"
		        android:background="@null"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:singleLine="true"
		      	android:ellipsize="end"
				android:textColor="@android:color/black"/>
		    <com.renyu.alumni.myview.SwitchButton
		        xmlns:app="http://schemas.android.com/apk/res-auto"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:textSize="@dimen/regist_content_hide_text"
		        android:textColor="@color/regist_title_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
	            android:id="@+id/donation_userinfo_anonymous"
	            android:checked="true"
		        android:layout_marginRight="@dimen/activity_donation_userinfo_marginleft2"
	            app:withTextInterval="@dimen/regist_content_hide_margin_left"
	            app:frameDrawable="@mipmap/switch_frame"
	            app:stateDrawable="@drawable/selector_switch_state"
	            app:stateMaskDrawable="@mipmap/switch_state_mask"
	            app:sliderDrawable="@drawable/selector_switch_slider"/>
		</RelativeLayout>
        
    </LinearLayout>
	<TextView 
    	android:id="@+id/donation_userinfo_start"
        android:text="下一步"
        android:gravity="center"
        android:textSize="@dimen/login_edit_commit_text"
        android:textColor="@android:color/white"
   		android:layout_width="match_parent"
   		android:layout_height="@dimen/activity_send_text2_height"
        android:background="@color/tab_text_press"
        android:layout_marginLeft="@dimen/login_edit_margin_leftright"
        android:layout_marginRight="@dimen/login_edit_margin_leftright"
        android:layout_marginBottom="@dimen/activity_donation_tip_margin_bottom"
        android:textStyle="bold" />
</LinearLayout>
