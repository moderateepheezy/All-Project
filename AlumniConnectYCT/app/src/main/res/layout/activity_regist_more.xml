<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >   
    <include 
        layout="@layout/view_navigation"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fadeScrollbars="true">
        <LinearLayout 
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical">
            <RelativeLayout 
		    	android:layout_width="match_parent"
		    	android:layout_height="@dimen/activity_send_comp">
			    <ImageView 
			        android:src="@drawable/ic_right"
			        android:layout_centerInParent="true"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"/>
			</RelativeLayout>
			<TextView 
			    android:text="注册成功，请完善个人信息"
			    android:textSize="@dimen/activity_send_text"
			    android:textColor="@color/tab_text_press"
			    android:gravity="center_horizontal"
		   		android:layout_width="fill_parent"
	    		android:layout_height="@dimen/regist_title_margin_top"/>
	        <LinearLayout 
	            android:orientation="vertical"
		   		android:layout_width="fill_parent"
		   		android:layout_height="wrap_content">
	            <TextView 
	                android:text="基本资料"
	                android:textSize="@dimen/regist_title_text"
	                android:textStyle="bold"
	                android:textColor="@color/regist_title_text"
	                android:gravity="center_vertical"
	                android:paddingLeft="@dimen/regist_title_margin_left"
	                android:background="@color/regist_title_bakcground"
		   			android:layout_width="fill_parent"
		   			android:layout_height="@dimen/regist_title_height"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="公司："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/regist_compname"
	                    android:hint="输入任职公司名称"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/regist_switch_compname"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="行业："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/regist_industry"
	                    android:hint="您所在的行业"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/regist_switch_industry"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
				<LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="城市："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <TextView 
	                    android:id="@+id/regist_city"
	                    android:hint="输入您所在的城市"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/regist_switch_city"
			            android:checked="true"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
				<TextView 
	                android:text="联系方式"
	                android:textSize="@dimen/regist_title_text"
	                android:textStyle="bold"
	                android:textColor="@color/regist_title_text"
	                android:gravity="center_vertical"
	                android:paddingLeft="@dimen/regist_title_margin_left"
	                android:background="@color/regist_title_bakcground"
		   			android:layout_width="fill_parent"
		   			android:layout_height="@dimen/regist_title_height"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="手机："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/regist_phone"
	                    android:hint="输入您的手机号："
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:inputType="number"
	                    android:maxLength="11"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/regist_switch_phone"
			            android:checked="false"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="QQ："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <EditText 
	                    android:id="@+id/regist_qq"
	                    android:hint="输入QQ号码"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:inputType="number"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/regist_switch_qq"
			            android:checked="false"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>
	            <View 
	                android:background="@color/regist_title_line"
	                android:layout_height="0.5dip"
	                android:layout_width="match_parent"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"/>
	            <LinearLayout 
	                android:orientation="horizontal"
	                android:layout_marginLeft="@dimen/regist_content_margin_left"
	                android:layout_marginRight="@dimen/regist_content_margin_right"
	                android:layout_height="@dimen/regist_content_height"
	                android:gravity="center_vertical"
		   			android:layout_width="fill_parent">
	                <TextView 
	                    android:text="邮箱："
	                    android:layout_weight="3"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:textColor="@android:color/black"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
	                <TextView  
	                    android:id="@+id/regist_email_"
	        			android:textSize="@dimen/activity_send_left_text"
	                    android:background="@null"
		   				android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"
	                    android:layout_weight="2"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:layout_marginRight="10dip"
	        			android:textColorHint="@color/activity_send_hint"
	        			android:textColor="@color/activity_send_line"/>
	                <com.renyu.alumni.myview.SwitchButton
				        android:text="公开"
				        android:textSize="@dimen/regist_content_hide_text"
				        android:textColor="@color/regist_title_text"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"
			            android:id="@+id/regist_switch_email"
			            android:checked="false"
			            app:withTextInterval="@dimen/regist_content_hide_margin_left"
			            app:frameDrawable="@drawable/switch_frame"
			            app:stateDrawable="@drawable/selector_switch_state"
			            app:stateMaskDrawable="@drawable/switch_state_mask"
			            app:sliderDrawable="@drawable/selector_switch_slider"/>
	            </LinearLayout>          
	        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
